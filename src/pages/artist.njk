---
pagination:
  data: artist
  size: 1
  alias: paintingDate
layout: basecarousel
permalink: "painting-date/{{ paintingDate.date | slug }}-{{ paintingDate.title | slug }}/"
eleventyExcludeFromCollections: true
---
  
<div class="tdbc-container">
  <article class="artist">
    <header>
      <div class="tdbc-column-container-artist">
        <section class="text-box">
          <h2>Recollections</h2>
          <div class="text-box--header">
            <h3>{{paintingDate.date}}</h3>
            <h4>{{paintingDate.title}}</h4>
            <h4>{{paintingDate.location[0].name}}</h4>
          </div>
          <div class="text-box--content">
            {{paintingDate.content | safe}}
          </div>
        </section>
        {% if paintingDate.portrait[0].imageKitUrl | length %}
          <section class="image--portrait">
            <img src="{{paintingDate.portrait[0].imageKitUrl}}" alt="" srcset="">
          </section>
        {% endif %}
      </div>
    </header>
    <section class="images">
      {% if paintingDate.artistImages | length %}
        <div class="images-row">
          <h5>Artist Images</h5>
            {% set images = paintingDate.artistImages %}
            {% set swipeClass = 'artist' %}
            {% include 'carousel.njk' %}
        </div>
      {% endif %}
      {% if paintingDate.leslieImages | length %}
        <div class="images-row">
          <h5>Leslie Images</h5>
          {% set images = paintingDate.leslieImages %}
          {% set swipeClass = 'leslie' %}
          {% include 'carousel.njk' %}
        </div>
      {% endif %}
      {% if paintingDate.locationImages | length %}
        <div class="images-row">
          <h5>Location Images</h5>
            {% set images = paintingDate.locationImages %}
            {% set swipeClass = 'location' %}
            {% include 'carousel.njk' %}
        </div>
      {% endif %}
    </section>
  </article>
</div>